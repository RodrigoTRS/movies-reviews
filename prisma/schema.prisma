generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  email    String
  password String
  Review   Review?

  @@map("user")
}

model Review {
  id         String    @id @default(uuid())
  user_id    String    @unique
  title_id   Int       @unique
  rating     Int
  review     String
  created_at DateTime  @default(now())
  updated_at DateTime?

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("reviews")
}
